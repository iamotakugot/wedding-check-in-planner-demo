{
  "rules": {
    "rsvps": {
      ".read": "auth != null",
      ".indexOn": ["uid", "isComing", "guestId"],
      "$rsvpId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('uid').val() === auth.uid || root.child('admins').child(auth.uid).exists())"
      }
    },
    "guests": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      "$guestId": {
        ".read": "auth != null && (root.child('admins').child(auth.uid).exists() || data.child('rsvpUid').val() === auth.uid || data.child('rsvpId').val() === auth.uid)",
        ".write": "auth != null && (root.child('admins').child(auth.uid).exists() || (data.child('rsvpUid').val() === auth.uid && !data.exists()))"
      },
      ".indexOn": ["rsvpUid", "rsvpId", "groupId", "zoneId", "tableId", "checkedInAt"]
    },
    "zones": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".indexOn": ["order"]
    },
    "tables": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".indexOn": ["zoneId", "order"]
    },
    "config": {
      ".read": true,
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },
    "admins": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid"
      }
    },
    "userSessions": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid && !root.child('admins').child(auth.uid).exists()",
          ".write": "auth != null && auth.uid === $uid && !root.child('admins').child(auth.uid).exists()"
        }
    },
    "adminSessions": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid && root.child('admins').child(auth.uid).exists()",
          ".write": "auth != null && auth.uid === $uid && root.child('admins').child(auth.uid).exists()"
        }
    },
    "userAppState": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "adminAppState": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid && root.child('admins').child(auth.uid).exists()",
        ".write": "auth != null && auth.uid === $uid && root.child('admins').child(auth.uid).exists()"
      }
    }
  }
}
